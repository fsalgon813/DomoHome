<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001219"
    tools:context=".Vista.DispositivosInteligentes"
    android:id="@+id/routines">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRoutines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/routines"
            android:textColor="#00D0FF"
            android:textSize="40sp"
            android:layout_marginTop="25dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRoutines"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:background="#001219"/>

        <Button
            android:id="@+id/btnAnyadeRutina"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_redondeado"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/add_routine"
            android:textColor="@color/black"/>

    </LinearLayout>
</FrameLayout>