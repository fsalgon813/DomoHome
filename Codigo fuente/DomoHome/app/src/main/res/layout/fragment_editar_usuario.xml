<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.EditarUsuario"
    android:id="@+id/editarUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#001219">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEditarUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/edit_user"
                android:textColor="#00D0FF"
                android:textSize="40sp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/usuario"
                android:drawablePadding="30dp"
                android:textColor="#000000"
                android:hint="@string/username"
                android:textColorHint="#7C7C7C"
                android:textSize="18sp"
                android:background="@drawable/et_redondeado"
                android:paddingHorizontal="6dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="70dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/etPasswd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="30dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:textColorHint="#7C7C7C"
                android:textSize="18sp"
                android:background="@drawable/et_redondeado"
                android:paddingHorizontal="6dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="50dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="65dp"
                android:textColor="#000000"
                android:hint="@string/name"
                android:textColorHint="#7C7C7C"
                android:textSize="18sp"
                android:background="@drawable/et_redondeado"
                android:paddingHorizontal="6dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="50dp"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">
            <Button
                android:id="@+id/btnActualiza"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/btn_redondeado"
                android:text="@string/update"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>